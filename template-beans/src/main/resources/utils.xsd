<?xml version="1.0" encoding="utf-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns="urn:beans.template.mycompany.com"
           targetNamespace="urn:beans.template.mycompany.com"
           elementFormDefault="qualified">

    <xs:element name="configUtils" type="ConfigUtils" />
    <xs:complexType name="ConfigUtils">
        <xs:sequence>
            <xs:element name="mongoReplicaSet" type="xs:string"/>
            <xs:element name="mongoDbName" type="xs:string"/>
            <xs:element name="mongoUserName" type="xs:string"/>
            <xs:element name="mongoPassword" type="xs:string"/>
        </xs:sequence>
    </xs:complexType>

    <xs:element name="role" type="Role"/>
    <xs:simpleType name="Role">
        <xs:restriction base="xs:string">
            <xs:enumeration value="ROLE_ADMIN"/>
            <xs:enumeration value="ROLE_BETATESTER"/>
            <xs:enumeration value="ROLE_MANAGER"/>
            <xs:enumeration value="ROLE_USER"/>
            <xs:enumeration value="ROLE_GUEST"/>
        </xs:restriction>
    </xs:simpleType>

</xs:schema>